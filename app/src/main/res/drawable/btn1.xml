<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#F87272"
                android:endColor="#F44336"
                android:angle="270"/>
            <stroke
                android:width="0dp"/>
            <corners android:radius="20dp"/>
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip"/>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#F87272"
                android:endColor="#F44336"
                android:angle="270"/>
            <stroke
                android:width="0dp"/>
            <corners android:radius="25dp"/>
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F87272"
                android:endColor="#F44336"
                android:angle="270"/>
            <stroke
                android:width="0dp"/>
            <corners android:radius="20dp"/>
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip"/>
        </shape>
    </item>
</selector>